<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray" >

    <!-- HEADER -->
    <TextView
            android:id="@+id/shareHeaderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/navy_blue"
            android:text="@string/share_header_title"
            android:textSize="@dimen/HeadersTitle"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:shadowColor="@color/light_gray"
            android:shadowRadius="1" />

    <!-- "Tap to share" Text -->
    <TextView
            android:id="@+id/shareTapToShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ShareNotesTapToShareText"
            android:gravity="center"
            android:text="@string/chooseNote"
            android:layout_margin="@dimen/ShareNotesTapToShareMargin"
            android:shadowColor="@color/white"
            android:shadowRadius="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Photo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/sharePhotoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/SharePhotoMaxHeight"
            android:src="@drawable/default_day_image"
            android:adjustViewBounds="true"
            android:padding="@dimen/SharePhotoPadding"
            android:layout_marginLeft="@dimen/SharePhotoMargin"
            android:layout_marginRight="@dimen/SharePhotoMargin"
            android:background="@drawable/main_detail_box_shape"/>
        </LinearLayout>

        <!-- List of Notes -->
        <ListView
            android:id="@+id/shareNotes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingRight="@dimen/ShareNotesSidesPadding"
            android:divider="@null"
            android:dividerHeight="@dimen/ShareNotesDividerHeight">
        </ListView>

    </LinearLayout>

</LinearLayout>
