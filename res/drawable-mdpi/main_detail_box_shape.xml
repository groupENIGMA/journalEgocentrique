<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                    android:startColor="@color/shadow_gray_start"
                    android:centerColor="@color/navy_blue"
                    android:endColor="@color/shadow_gray_start"
                    android:angle="0"/>
            <corners
                    android:radius="3dp" />

        </shape>
    </item>

    <!-- Box -->
    <item android:bottom="2px">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="3dp" />
        </shape>
    </item>

</layer-list>
