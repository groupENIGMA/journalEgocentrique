<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_detail_box_shape">
 
    <ImageView
        android:id="@+id/EntryMoodEmote"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:paddingLeft="0dip"
        android:padding="@dimen/MainActivityHeaderContentPadding"
        android:src="@drawable/ic_launcher" />
 
    <TextView
        android:id="@+id/EntryNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/MainActivityHeaderContentPadding"
        android:layout_alignTop="@+id/EntryMoodEmote"
        android:layout_toRightOf="@+id/EntryMoodEmote" />
 
</RelativeLayout>
